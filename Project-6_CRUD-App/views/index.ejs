<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/CSS/style.css">
    
    <title>Home page</title>
</head>
<body>
    <div class="text-center">
        <div  class="p-1">
            <br>
            <h3>Employee Management System</h3>
            <div class="text-end">
                <a href="/users/new" type="button" class="btn btn-primary align-self-center">+ Add Employee</a>
            </div>
        </div>
        <div  class="p-1">

            <table class="table table-bordered text-start">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">Emp. Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <!-- <th scope="col">Comment</th> -->
                    <th scope="col" class="text-end">Action</th>
                  </tr>
                </thead>
                <tbody>

                    <% comments.map((comment)=>{ %>
                        <tr>
                            <td><%= comment.id %></td>
                            <td><%= comment.name %></td>
                            <td><%= comment.email %></td>
                            <td><%= comment.phone %></td>
                            
                            <td class="text-end">
                                <a href="/users/<%= comment.id %>" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
                                <a href="/users/<%= comment.id %>/edit" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
                                <a href="/users/<%= comment.id %>/delete" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
                            </td>

                        </tr>
                    <% }) %>
                
                </tbody>
            </table>


            </ul>
        </div>
</div>
</body>
</html>